@model IEnumerable<Alumno>


@if (Model.Count() != 0)
{
    <div class="row justify-content-center justify-content-lg-start mt-3">
        <div class="col custom">
            <h4>Alumno</h4>
        </div>
        <div class="col custom">
            <h4>Apellido</h4>
        </div>
        <div class="col custom">
            <h4>Numero de Cuenta</h4>
        </div>
        <div class="col custom">
            <h4>Presente</h4>
        </div>
        <div class="col custom">
            <h4>Inasistente</h4>
        </div>
    </div>
    @foreach (Alumno alumno in Model)
    {
        <div class="row justify-content-center justify-content-lg-star">
            <div class="col custom-Lista">
                <h5 class="card-title">@alumno.Nombre</h5>
            </div>
            <div class="col custom-Lista">
                <h5 class="card-title">@alumno.Apellido</h5>
            </div>
            <div class="col custom-Lista">
                <h5 class="card-title">@alumno.NumeroDeCuenta</h5>
            </div>
            <div class="col custom-Lista">
                <h5 class="card-title"><input type="checkbox" checked="@alumno.Presente" disabled class="form-check-input" style="background-color: green;" /></h5>
            </div>
            <div class="col custom-Lista">
                <h5 class="card-title"><input type="checkbox" checked="@alumno.Ausente" disabled class="form-check-input" style="background-color: red;" /></h5>
            </div>
        </div>
    }
}
else
{
    <p>No hay alumnos para mostrar</p>
}