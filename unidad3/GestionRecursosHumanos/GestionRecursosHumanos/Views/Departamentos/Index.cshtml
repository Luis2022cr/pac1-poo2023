@model IEnumerable<Departamento>

@{
	ViewData["Title"] = "Lista de Departamentos";
}

<h1>@ViewData["Title"]</h1>
<h5>Los departamentos se usaran para agurpos a los empleados por departamento. Ejemplos: Ventas, Finanzas, Desarrollador, etc.</h5>

<a asp-action="Crear" class="btn1"><i class="bi bi-cloud-plus"></i> Crear Nuevo</a>
<p></p>

<table class="table">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Codigo</th>
			<th>Descripcion</th>
			<th>Acciones</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var departamento in Model)
		{
			<tr>
				<td>@departamento.Nombre</td>
				<td>@departamento.Codigo</td>
				<td>@departamento.Descripcion</td>
				<td>
					<input type="hidden" asp-for="@departamento.Id" />
					<a asp-action="Editar" asp-route-id="@departamento.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Editar</a>
					<a asp-action="Borrar" asp-route-id="@departamento.Id" class="btn btn-outline-danger"><i class="bi bi-x-octagon"></i> Borrar</a>
				</td>
			</tr>
		}
	</tbody>

</table>