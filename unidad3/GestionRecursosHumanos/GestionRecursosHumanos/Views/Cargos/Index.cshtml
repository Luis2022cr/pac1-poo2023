@model IEnumerable<Cargo>

@{
	ViewData["Title"] = "Lista de Cargos";
}

<h1>@ViewData["Title"]</h1>
<h5>Los cargos se usaran para agrupar a los empleados segun su cargo. Ejemplos: Gerentes General, Gerente de ventas, Analista de datos, etc.</h5>

<a asp-action="Crear" class="btn1"><i class="bi bi-cloud-plus"></i> Crear Nuevo</a>

<p></p>
<table class="table">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Codigo</th>
			<th>Descripcion</th>
			<th>Acciones</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var cargo in Model)
		{
			<tr>
				<td>@cargo.Nombre</td>
				<td>@cargo.Codigo</td>
				<td>@cargo.Descripcion</td>
				<td>
					<input type="hidden" asp-for="@cargo.Id" />
					<a asp-action="Editar" asp-route-id="@cargo.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Editar</a>
					<a asp-action="Borrar" asp-route-id="@cargo.Id" class="btn btn-outline-danger"><i class="bi bi-x-octagon"></i> Borrar</a>
				</td>
			</tr>
		}
	</tbody>

</table>